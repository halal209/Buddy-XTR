
{
  "name": "ben",
  "description": "Buddy-XTR by carl william.",
  "logo": "https://files.catbox.moe/waszph.jpg",
  "keywords": ["CARL-TECH", "whatsapp-bot", "whatsapp-md-bot"],
  "repository": "https://github.com/carl24tech/Buddy-XTR",
  "stack": "container",
  "env": { 
    "SESSION_ID": {
      "description": "Ensure your session Id starts with Buddy;;;",
      "required": true,
      "value": "Buddy;;;YZxxiZIB#rQ0dig_Qqoyms4t0qtHz6ota-woG_lPRyQVKMeGrcjk"
    },
    "MODE": {
      "description": "Set to 'public' or 'private' to define bot mode",
      "required": true,
      "value": "private"
    },
    "PREFIX": {
      "description": "Your Bot Prefix (default: .)",
      "required": false,
      "value": "."
    },
    "OWNER_NAME": {
      "description": "Your name as the bot owner",
      "required": false,
      "value": "ben"
    },
    "OWNER_NUMBER": {
      "description": "Your WhatsApp number",
      "required": true,
      "value": "254727374449"
    },
    "AUTO_READ": {
      "description": "Enable bot to auto-read messages (true/false)",
      "required": false,
      "value": "false"
    },
    "AUTO_TYPING": {
      "description": "Enable bot to show typing status (true/false)",
      "required": false,
      "value": "false"
    },
    "AUTO_RECORDING": {
      "description": "Enable bot to show recording status (true/false)",
      "required": false,
      "value": "false"
    },
    "ALWAYS_ONLINE": {
      "description": "Keep bot always online (true/false)",
      "required": false,
      "value": "false"
    },
    "AUTO_REACT": {
      "description": "Enable bot to auto-react to messages (true/false)",
      "required": false,
      "value": "false"
    },
    "AUTO_BIO": {
      "description": "Enable bot to automatically change your bio (true/false)",
      "required": false,
      "value": "false"
    },
    "ANTI_WORD": {
      "description": "If enabled,the bot will auto-block abusive words(true/false)",
      "required": false,
      "value": "false"
    },
    "ANTI_DELETE": {
      "description": "If enabled,the bot will auto-recover deleted messages(true/false)",
      "required": false,
      "value": "true"
    },
    "AUTO_STATUS_SEEN": {
      "description": "Enable bot to view statuses (true/false)",
      "required": false,
      "value": "true"
    },
    "AUTO_STATUS_REACT": {
      "description": "Enable bot to like statuses (true/false)",
      "required": false,
      "value": "true"
    },
    "AUTO_BLOCK": {
      "description": "Enable bot to auto-block specific numbers (true/false)",
      "required": false,
      "value": "false"
    },
    "REJECT_CALL": {
      "description": "Enable bot to reject incoming calls (true/false)",
      "required": false,
      "value": "true"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/DuckyTeam/heroku-buildpack-imagemagick.git"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
    },
    {
      "url": "https://github.com/clhuang/heroku-buildpack-webp-binaries.git"
    }
  ]
  }
